{
  "manifest_version": 3,
  "name": "ðŸ§¬ NAS Omni Extension",
  "version": "1.0",
  "description": "God-mode chrome extension for home network devices.",
  "author": "github.com/timoheddes",

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": ["<all_urls>"],

  "background": {
    "service_worker": "loader.js",
    "type": "module"
  },

  "web_accessible_resources": [
    {
      "resources": ["bridge.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
